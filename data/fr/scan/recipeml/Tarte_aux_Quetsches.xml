    <recipe>
        <head>
            <title>Tarte aux Quetsches</title>
            <source/>
            <categories/>
            <yield>
								<range><q1>6</q1><sep> to </sep><q2>8</q2></range>
								<unit>servings</unit>
						</yield>
						<preptime type="preparation">
							  <time>
								    <qty>30</qty>
								    <timeunit>minutes</timeunit>
